# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/kgc_compliance_cloud"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_min_32_characters_long"

# MinIO (S3-Compatible Object Storage)
# Use "minio" when running in Docker, "localhost" for local development
MINIO_ENDPOINT="minio"
MINIO_PORT="9000"
MINIO_USE_SSL="false"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="documents"

# Redis (Job Queue)
# Use "redis" when running in Docker, "localhost" for local development
REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"
SMTP_FROM="KGC Compliance Cloud <noreply@kgc-compliance.com>"

# Application
NODE_ENV="development"
APP_NAME="KGC Compliance Cloud"
APP_URL="http://localhost:3000"

# Feature Flags
ENABLE_BACKGROUND_JOBS="true"
ENABLE_EMAIL_NOTIFICATIONS="true"
ENABLE_OCR_PROCESSING="false"
ENABLE_AI_SUMMARIES="false"
